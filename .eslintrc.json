{
    "plugins": ["prettier"],
    "extends": "eslint:recommended",
    "rules": {
        "prettier/prettier": "error",
        "semi": [2, "always"],
        "no-const-assign": 2,
        "no-var": 2,
        "indent": [2, 4],
        "quotes": [2, "backtick"],
        "no-plusplus": 2,
        "global-require": 2
    },
    "globals": {},
    "env": {
        "node": true,
        "es6": true,
        "browser": true
    },
    "parser": "babel-eslint"
}
